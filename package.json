{
  "name": "polkadot-agent-kit",
  "version": "1.0.0",
  "description": "AI Agent Kit for Polkadot",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "esbuild index=./src --bundle --minify --outdir=dist --packages=external --platform=node",
    "start": "node dist",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "setup": "pnpm i @polkadot-api/descriptors -w && ts-node ./scripts/check-papi.ts && pnpm i polkadot-api -w && ts-node scripts/setup-chains.ts",
    "test:key-types": "mocha -r ts-node/register tests/config-tests/key-types.test.ts",
    "test:integration": "INTEGRATION=true mocha -r ts-node/register tests/interaction-tests/key-types-integration.test.ts"
  },
  "engines": {
    "node": "22"
  },
  "keywords": ["polkadot", "ai", "llm", "agent"],
  "license": "ISC",
  "dependencies": {
    "@langchain/community": "^0.3.19",
    "@langchain/core": "^0.3.40",
    "@langchain/langgraph": "^0.2.33",
    "@langchain/openai": "^0.3.17",
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@polkadot-labs/hdkd": "^0.0.12",
    "@polkadot-labs/hdkd-helpers": "^0.0.12",
    "@polkadot/keyring": "^13.4.3",
    "@polkadot/util": "^13.4.3",
    "@polkadot/util-crypto": "^13.4.3",
    "@subsquid/ss58": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "axios": "^1.6.7",
    "bs58": "^6.0.0",
    "dotenv": "^16.0.3",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "express": "^4.18.2",
    "langchain": "^0.3.7",
    "marked": "^15.0.4",
    "nanoid": "^3.0.0",
    "node-fetch": "2",
    "openai": "^4.62.1",
    "polkadot-api": "^1.9.4",
    "postgres": "^3.4.5",
    "std-env": "^3.8.1",
    "telegraf": "^4.16.3",
    "telegraf-safe-md-reply": "^1.0.0",
    "typescript-eslint": "^8.29.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "volta": {
    "node": "22.12.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.12.0",
    "@types/sinon": "^17.0.4",
    "chai": "4.3.10",
    "esbuild": "^0.24.2",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.0.4"
  }
}
